import matplotlib.pyplot as plt
import numpy as np
from read_files import read_radar_data
data = read_radar_data()
Pulses = data[0]
Range_Bins = data[2]
allPulses = []
for i in range(len(Pulses)):
    for x in range(len(Pulses[i])):
        allPulses.append(Pulses[i][x])

Image = np.flip(np.reshape(allPulses,(len(Range_Bins),len(Pulses))),0)
plt.imshow(Image)
plt.axis('tight')
plt.show()
